@model DependencyInjection.Domain.Model.Details

@{
    ViewBag.Title = "Home";
}
<html>

<h2>Home</h2>

<body>
    @using (Html.BeginForm("CreateDetails", "Details", FormMethod.Post))
    {
    <table cellpadding="0" cellspacing="0">
        <tr>
            <th colspan="2" align="center">Person Details</th>
        </tr>
        <tr>
            <td>ID:</td>
            <td>
                @Html.TextBoxFor(m => m.id)
            </td>
        </tr>
        <tr>
            <td>FirstName: </td>
            <td>
                @Html.TextBoxFor(m => m.FirstName)
            </td>
        </tr>
        <tr>
            <td>LastName: </td>
            <td>
                @Html.TextBoxFor(m => m.LastName)
            </td>
        </tr>

        <tr>
            <td></td>
            <td><input type="submit" value="Submit" /></td>
        </tr>
    </table>
    }
</body>
</html>




